      // increment total ants crushed
      if (Ants[currentAnt].antSize <= 7){
        // one point for regular ants 
        totalAntsCrushed++;
      }
      // draw queens
      if (Ants[currentAnt].antSize == 8){
        // 20 points for queens
        totalAntsCrushed = totalAntsCrushed + 20;
      }
      // kill the ant
      Ants[currentAnt].alive = false;
    }
  }
}

